# VibeVoyage Environment Configuration
# Copy this file to .env and fill in your actual values

# Routing Service Configuration
OSRM_BASE_URL=https://router.project-osrm.org
OPENSTREETMAP_API_URL=https://api.openstreetmap.org

# AI Services
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here
HUGGING_FACE_MODEL_URL=https://api-inference.huggingface.co/models/

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Translation Service
CROWDIN_PROJECT_ID=your_crowdin_project_id
CROWDIN_API_TOKEN=your_crowdin_api_token

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Development Settings
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Safety Configuration
DEFAULT_SPEED_THRESHOLD=5
EMERGENCY_CONTACT=911
SAFETY_MODE=strict

# Voice Configuration
DEFAULT_VOICE_LANGUAGE=en-US
VOICE_RECOGNITION_TIMEOUT=5000
TTS_RATE=0.8
TTS_PITCH=1.0

# Map Configuration
DEFAULT_MAP_STYLE=standard
MAP_ZOOM_LEVEL=15
TRAFFIC_LAYER_ENABLED=true

# Gamification
XP_MULTIPLIER=1.0
BADGE_UNLOCK_THRESHOLD=100
LEADERBOARD_SIZE=50

# Community Features
REPORT_EXPIRY_TIME=3600
MODERATION_THRESHOLD=3
REPUTATION_THRESHOLD=100

# External POI APIs
GOOGLE_PLACES_API_KEY=your_google_places_api_key
YELP_API_KEY=your_yelp_api_key
TRANSIT_API_KEY=your_transit_api_key
TOMTOM_API_KEY=your_tomtom_api_key

# POI Service Configuration
POI_CACHE_DURATION=1800
POI_MAX_RESULTS=50
POI_SEARCH_RADIUS=5000
ENABLE_EXTERNAL_APIS=true
ENABLE_TRANSIT_SCHEDULES=true

# Premium Features
PREMIUM_TRIAL_DAYS=7
PREMIUM_FEATURES_ENABLED=true

# Deployment
APP_VERSION=1.0.0
BUILD_NUMBER=1
ENVIRONMENT=development

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_SECRET=your_api_secret_here

# Third-party Integrations
SOCIAL_MEDIA_SHARING_ENABLED=true
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key
INSTAGRAM_CLIENT_ID=your_instagram_client_id

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_RETENTION_DAYS=30
PERFORMANCE_MONITORING=true

# Feature Flags
AR_NAVIGATION_ENABLED=true
VOICE_COMMANDS_ENABLED=true
ECO_ROUTING_ENABLED=true
COMMUNITY_FEATURES_ENABLED=true
PREMIUM_FEATURES_ENABLED=false
OFFLINE_MAPS_ENABLED=false

# Budget-Friendly Features
COST_OPTIMIZATION_ENABLED=true
FREE_TTS_ENABLED=true
ADMOB_ENABLED=false
COMMUNITY_VALIDATION_ENABLED=true
ROYALTY_FREE_SOUNDS=true

# Free Hosting Configuration
VERCEL_DEPLOYMENT=true
NETLIFY_DEPLOYMENT=false
FREE_TIER_LIMITS=true
AGGRESSIVE_CACHING=true

# Monetization Settings
ENABLE_ADS=false
AD_FREQUENCY=low
ENABLE_DONATIONS=true
PREMIUM_TRIAL_DAYS=7

# Free Service APIs
USE_FREE_APIS_ONLY=true
OSRM_ROUTING=true
NOMINATIM_GEOCODING=true
OVERPASS_POI=true
ESPEAK_TTS=true

# Regional Settings
SUPPORTED_COUNTRIES=US,UK,CA,AU,NG,MX,ID,AE
DEFAULT_COUNTRY=US
METRIC_SYSTEM=false

# Testing
TEST_MODE=false
MOCK_GPS_ENABLED=false
MOCK_VOICE_ENABLED=false
TEST_USER_ID=test_user_123
